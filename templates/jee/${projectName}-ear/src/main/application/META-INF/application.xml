<?xml version="1.0"?>
<application xmlns="http://java.sun.com/xml/ns/javaee"
             xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/application_6.xsd"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="6">
    <application-name>${projectName}</application-name>
    <display-name>${projectDescription}</display-name>
    <module>
        <ejb>${projectName}-service.jar</ejb>
    </module>
    <module>
        <ejb>${projectName}-persistence.jar</ejb>
    </module>
    <module>
        <web>
            <web-uri>${projectName}-web-service.war</web-uri>
            <context-root>/${projectName}/api</context-root>
        </web>
    </module>
    <library-directory>lib</library-directory>
</application>
