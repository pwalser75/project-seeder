<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<template>
    <name>Documentation</name>
    <description>AsciiDoc based documentation project with PDF/HTML5 output</description>
    <parameters>
        <parameter name="projectGroup" label="Project group" type="identifier" default="org.test"/>
        <parameter name="projectDescription" label="Project description" type="text" default="Example ${template.name} Project"/>
        <parameter name="projectVersion" label="Project version" type="version" default="1.0.0-SNAPSHOT"/>
        <parameter name="category" label="Document category" type="text" default="Documentation"/>
        <parameter name="title" label="Document Title" type="text" default="${projectDescription}"/>
        <parameter name="author" label="Document author(s)" type="text" default="Unknown Author"/>
    </parameters>
</template>